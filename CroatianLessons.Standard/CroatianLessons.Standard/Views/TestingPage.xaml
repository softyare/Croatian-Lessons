<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CroatianLessons.Standard.Views.TestingPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="0, 20, 0, 0" />
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Settings:" />
            <StackLayout Orientation="Horizontal" >
                <Label Text="Is First time? " />
                <Switch IsToggled="{Binding IsFirst}"/>
                <Label Text="{Binding IsFirstTimeText}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>